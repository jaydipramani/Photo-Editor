<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="100dp"
    android:layout_marginEnd="5dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:gravity="center">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/round_image_view_filter_item"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_splash_1"
            app:siBorderType="fill"
            app:siRadius="5dp" />

        <View
            android:id="@+id/view_selected"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_selected"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_lock_pro"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:background="@drawable/pro_12"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
