<?xml version="1.0" encoding="utf-8"?>
<com.relish.app.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor">

    <com.relish.app.widget.TouchImageView
        android:id="@+id/image_view_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/image_view_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_photo_selected" />
</com.relish.app.widget.SquareLayout>
