<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="65dp"
    android:layout_height="110dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:gravity="center">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/round_image_view_filter_item"
            android:layout_width="65dp"
            android:layout_height="74dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_splash_1"
            app:siBorderType="fill" />

        <TextView
            android:id="@+id/text_view_filter_name"
            android:layout_width="65dp"
            android:layout_height="16dp"
            android:layout_below="@+id/round_image_view_filter_item"
            android:background="@color/black"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="SD-1"
            android:textColor="@color/white"
            android:textSize="9sp" />

        <View
            android:id="@+id/view_selected"
            android:layout_width="65dp"
            android:layout_height="74dp"
            android:background="@drawable/ic_selected"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_lock_pro"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:background="@drawable/pro_12"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
