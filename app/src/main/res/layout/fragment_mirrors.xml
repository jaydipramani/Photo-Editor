<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/BackgroundCardColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMirror"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutMirrorCont"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <FrameLayout
            android:id="@+id/frameLayoutWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.relish.app.widget.SquareLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.relish.app.widget.SquareLayout
                    android:id="@+id/squareLayout2d_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.relish.app.mirror.Mirror3D_2Layer
                            android:id="@+id/drag2D_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_2Layer>

                        <com.relish.app.mirror.Mirror3D_2Layer
                            android:id="@+id/drag2D_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_2Layer>
                    </LinearLayout>
                </com.relish.app.widget.SquareLayout>

                <com.relish.app.widget.SquareLayout
                    android:id="@+id/squareLayout2d_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.relish.app.mirror.Mirror2D_2Layer
                            android:id="@+id/drag2D_3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror2D_2Layer>

                        <com.relish.app.mirror.Mirror2D_2Layer
                            android:id="@+id/drag2D_4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror2D_2Layer>
                    </LinearLayout>
                </com.relish.app.widget.SquareLayout>

                <com.relish.app.widget.SquareLayout
                    android:id="@+id/squareLayout2d_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.relish.app.mirror.Mirror3D_2Layer
                            android:id="@+id/drag2D_5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_2Layer>

                        <com.relish.app.mirror.Mirror3D_2Layer
                            android:id="@+id/drag2D_6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_2Layer>
                    </LinearLayout>
                </com.relish.app.widget.SquareLayout>

                <com.relish.app.widget.SquareLayout
                    android:id="@+id/squareLayout2d_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.relish.app.mirror.Mirror2D_3Layer
                            android:id="@+id/drag2D_7"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:rotation="180"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror2D_3Layer>

                        <com.relish.app.mirror.Mirror2D_3Layer
                            android:id="@+id/drag2D_8"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror2D_3Layer>
                    </LinearLayout>
                </com.relish.app.widget.SquareLayout>

                <com.relish.app.widget.SquareLayout
                    android:id="@+id/squareLayout2d_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.relish.app.mirror.Mirror2D_3Layer
                            android:id="@+id/drag2D_9"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror2D_3Layer>

                        <com.relish.app.mirror.Mirror2D_3Layer
                            android:id="@+id/drag2D_10"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:rotation="180"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror2D_3Layer>
                    </LinearLayout>
                </com.relish.app.widget.SquareLayout>

                <com.relish.app.widget.SquareLayout
                    android:id="@+id/squareLayout2d_11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.relish.app.mirror.Mirror2D_3L
                            android:id="@+id/drag2D_11"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_11"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror2D_3L>

                        <com.relish.app.mirror.Mirror2D_3L
                            android:id="@+id/drag2D_12"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_12"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror2D_3L>

                        <com.relish.app.mirror.Mirror2D_3L
                            android:id="@+id/drag2D_13"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_13"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror2D_3L>
                    </LinearLayout>
                </com.relish.app.widget.SquareLayout>

                <com.relish.app.widget.SquareLayout
                    android:id="@+id/squareLayout3d_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.relish.app.mirror.Mirror3D_2Layer
                            android:id="@+id/drag3D_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView3D_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_2Layer>

                        <com.relish.app.mirror.Mirror3D_2Layer
                            android:id="@+id/drag3D_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView3D_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_2Layer>
                    </LinearLayout>
                </com.relish.app.widget.SquareLayout>

                <com.relish.app.widget.SquareLayout
                    android:id="@+id/squareLayout3d_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.relish.app.mirror.Mirror3D_4Layer
                            android:id="@+id/drag3D_3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView3D_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_4Layer>

                        <com.relish.app.mirror.Mirror3D_4Layer
                            android:id="@+id/drag3D_4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView3D_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_4Layer>

                        <com.relish.app.mirror.Mirror3D_4Layer
                            android:id="@+id/drag3D_5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView3D_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_4Layer>

                        <com.relish.app.mirror.Mirror3D_4Layer
                            android:id="@+id/drag3D_6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView3D_6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.relish.app.mirror.Mirror3D_4Layer>
                    </LinearLayout>
                </com.relish.app.widget.SquareLayout>

                <FrameLayout
                    android:id="@+id/frameLayout3D_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mirror_3d_1"
                    android:visibility="gone" />
            </com.relish.app.widget.SquareLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_loading"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:elevation="200dp"
                android:visibility="gone">

                <com.relish.app.loading.LoadingView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/background_loading"
                    app:loading_renderer="DanceLoading" />
            </RelativeLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMirrorCont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BackgroundColor"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_confirm_adjust"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewMirror">

            <ImageView
                android:id="@+id/imageViewCloseMirror"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onClick"
                android:padding="11dp"
                android:src="@drawable/ic_round_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/_2d_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:text="2D"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/view_2D"
                        android:layout_width="20dp"
                        android:layout_height="4dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_view" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/_3d_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:text="3D"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/view_3D"
                        android:layout_width="20dp"
                        android:layout_height="4dp"
                        android:layout_below="@+id/textViewTitle2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_view"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="MIRROR"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="4dp"
                    android:layout_below="@+id/textViewTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_view" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageViewSaveMirror"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onClick"
                android:padding="11dp"
                android:src="@drawable/ic_round_check"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMirror"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
